{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/dateRangePicker.jsx",
    "src/components/OrderTable.tsx"
, "src/components/ui/calendar.tsx", "src/components/add-user-dialog.jsx", "src/components/LoginDialog.jsx", "src/components/TransferOrder.jsx", "src/app/materialImage/page.jsx", "src/components/POReport.jsx", "src/app/spareKitLibrary/page.jsx", "src/app/spareKitLibrary/page.jsx", "src/components/POpdfGenerator.jsx", "src/app/emailDetials/page.jsx", "src/components/BarChart.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
